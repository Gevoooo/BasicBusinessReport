<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="378.0" prefWidth="524.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.georgenakashyan.lab1.homework3.PrimaryController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleMenuItemOpen" text="Open From JSON..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleMenuItemSave" text="Save Report to File..." />
              <MenuItem mnemonicParsing="false" onAction="#handleMenuItemClose" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label text="Worker Count" />
      <TextField fx:id="WorkerCountTextField" />
      <Label text="Workers" />
      <ListView fx:id="listViewWorkers" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
